
@{
    ViewData["Title"] = "Carrinho";
}

<h3>Meu Carrinho</h3>

<div class="panel panel-default">
    <div class="panel-heading">
        <div class="row">
            <div class="col-xs-6">ITEM</div>
            <div class="col-xs-2">PR. UNIT</div>
            <div class="col-xs-2">QUANT</div>
            <div class="col-xs-2">
                <span class="pull-right">
                    SUBTOTAL
                </span>
            </div>
        </div>
    </div>
    <div class="panel-body">
        <div class="row">
            <div class="col-xs-2">
                <img src="~/images/produtos/small_1.jpg" class="img-responsive" />
            </div>
            <div class="col-xs-4">
                <span class="pull-left">
                    DESCRIÇÃO
                </span>
            </div>
            <div class="col-xs-2">
                2,00
            </div>
            <div class="col-xs-2">
                2
            </div>
            <div class="col-xs-2">
                <span class="pull-right">4,00</span>
            </div>
        </div>
    </div>
    <div class="panel-footer">
        <div class="row">
            <div class="col-xs-10">TOTAL</div>
            <div class="col-xs-2">
                <span class="pull-right">R$:100</span>
            </div>
        </div>
    </div>    
</div>
<div class="row">
    <div class="col-xs-12">
        @Html.ActionLink("Finalizar", "Carrinho", "Pedido", null, new { @class = "btn btn-success pull-right" })
    </div>
</div>