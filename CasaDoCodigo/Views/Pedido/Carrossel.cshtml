@{
    ViewData["Title"] = "Carrossel";
}
@model List<Produto>
<h3>Catálogo</h3>
<div id="my-carousel" class="carousel slide teste" data-ride="carousel">
    <!-- Indicators -->
    @*<ol class="carousel-indicators">
            <li data-target="#my-carousel" data-slide-to="0" class="active"></li>
            <li data-target="#my-carousel" data-slide-to="1"></li>
            <li data-target="#my-carousel" data-slide-to="2"></li>
        </ol>*@

    <!-- Wrapper for slides -->
    <div class="carousel-inner" role="listbox">
        @{
            const int PRODUTOS_POR_PAGINA = 4;
            int numero_paginas = Model.Count / 4;
            numero_paginas = numero_paginas + (Model.Count % 4 > 0 ? 1 : 0);
        }
        @for (int pagina_atual = 0; pagina_atual < numero_paginas; pagina_atual++)
        {
            <div class="item @(pagina_atual == 0 ? "active" : "")">
                <div class="row">
                    @for (int i = PRODUTOS_POR_PAGINA * pagina_atual; i < PRODUTOS_POR_PAGINA * (pagina_atual + 1); i++)
                    {
                        if (Model.Count <= i)
                        {
                            break;
                        }
                        <div class="col-md-3">
                            <div class="panel panel-default">
                                <div class="panel-body">
                                    <img src="~/images/produtos/large_@(Model[i].Id).jpg" />
                                </div>
                                <div class="panel-footer">
                                    <div>@(Model[i].Nome)</div>
                                    <div>R$ @(Model[i].Preco)</div>
                                    <div class="text-center">
                                        <a asp-action="carrinho">Adicionar</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        }
        @*<div class="item">
            <div class="row">
                @for (int i = 4; i < 8; i++)
                {
